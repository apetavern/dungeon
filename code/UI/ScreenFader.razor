@using System;
@using Sandbox.UI;

@namespace Dungeon.UI
@inherits Panel

@code {
    TimeUntil _untilDone;

    public ScreenFader(float fadeDuration)
    {
        _untilDone = fadeDuration;
        Style.Opacity = 1.0f;
    }

    public override void Tick()
    {
        Style.Opacity = 1.0f - _untilDone.Fraction;
        if (_untilDone)
            Delete();
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(Time.Now);
    }
}

<style>
    ScreenFader {
        position: absolute;
        background-color: black;
        width: 100%;
        height: 100%;
        /* opacity: 1; */
    }
</style>

